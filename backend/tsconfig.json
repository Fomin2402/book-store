{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "rootDir": ".",
    },
    "files": ["app.ts"],
    "lib": ["es2015"],
    "exclude": [
        ".idea",
        ".vscode",
        "build",
        "node_modules",
        "typings/globals",
        "typings/modules"
    ]
}
